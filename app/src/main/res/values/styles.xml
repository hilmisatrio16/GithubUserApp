<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:background">@drawable/background_rounded</item>
        <item name="android:textColor">@color/color_text_follow</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewLightStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="btnBackStyle">
        <item name="android:background">@drawable/background_circle_white</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/text_searchview</item>
        <item name="android:textColorHint">@color/hint_searchview</item>
        <item name="android:tint">@color/grey_400</item>
    </style>
</resources>